<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextView" parent="TextView" tools:ignore="ResourceCycle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="View" parent="View" tools:ignore="ResourceCycle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="backgroundTint">@color/view</item>

    </style>

    <style name="Base.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Bottom" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="roundeImageView" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="popupBGStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

</resources>