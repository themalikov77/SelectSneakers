<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="4dp"
    android:background="@color/screan_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="6dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/eight8dp"
        android:layout_height="126dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:src="@drawable/delete_favorite"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="15dp"
                android:layout_height="17dp"/>
            
            <ImageView
                android:id="@+id/imgFavorite"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="126dp"
                android:background="@color/blue"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvFavoriteName"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Nike sneakers"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgFavorite"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintBottom_toTopOf="@id/tvFavoriteColor"
                android:id="@+id/tvFavoriteDesc"
                android:text="Мужские кросовки"
                android:textSize="12sp"
                android:maxLines="1"
                android:layout_marginEnd="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/imgFavorite"
                app:layout_constraintTop_toBottomOf="@id/tvFavoriteName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintBottom_toTopOf="@id/tvFavoritePrice"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Color:"
                app:layout_constraintStart_toStartOf="@id/tvFavoriteDesc"
                app:layout_constraintTop_toBottomOf="@id/tvFavoriteDesc"
                android:layout_marginTop="3dp"
                android:id="@+id/tvFavoriteColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginStart="7dp"
                android:id="@+id/imgFavoriteColor"
                app:layout_constraintStart_toEndOf="@+id/tvFavoriteColor"
                app:layout_constraintTop_toTopOf="@id/tvFavoriteColor"
                app:layout_constraintBottom_toBottomOf="@id/tvFavoriteColor"
                android:layout_width="35dp"
                android:background="@color/blue"
                android:layout_height="20dp"/>

            <TextView
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tvFavoriteSize"
                app:layout_constraintStart_toEndOf="@id/imgFavoriteColor"
                app:layout_constraintTop_toTopOf="@id/imgFavoriteColor"
                app:layout_constraintBottom_toBottomOf="@id/imgFavoriteColor"
                android:layout_marginStart="19dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="@dimen/sp16"
                android:text="Size:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/imgFavoriteSize"
                app:layout_constraintStart_toEndOf="@id/tvFavoriteSize"
                app:layout_constraintTop_toTopOf="@id/tvFavoriteSize"
                app:layout_constraintBottom_toBottomOf="@id/tvFavoriteSize"
                android:layout_width="35dp"
                android:textSize="16sp"
                android:text="41"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="20dp"/>
            
            <TextView
                app:layout_constraintBottom_toBottomOf="@id/favoriteView"
                android:id="@+id/tvFavoritePrice"
                android:text="@string/_4590c"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/tvFavoriteColor"
                app:layout_constraintTop_toBottomOf="@id/tvFavoriteColor"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/favoriteView"
                android:background="@color/grey"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@id/imgFavorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </com.google.android.material.card.MaterialCardView>
    
</androidx.constraintlayout.widget.ConstraintLayout>