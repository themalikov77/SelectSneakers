<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize"
    tools:context=".ui.home.PayFragment">

    <TextView
        android:id="@+id/input_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:text="@string/input_data"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/materialCardView"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/error_text_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStart_Iv"
        android:layout_marginTop="@dimen/marginTop_iv"
        android:text="@string/error"
        android:textColor="@color/error_color"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/uncorrect_number_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStart_Iv"
        android:layout_marginTop="@dimen/marginTop_iv"
        android:src="@drawable/uncurrect_number_text_img"
        android:text="@string/wrong_number_card"
        android:textColor="@color/blue"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_text_image_view"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="138dp"
        android:layout_marginTop="27dp"
        android:text="@string/blue_text_privacy"
        android:textColor="@color/button_color"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uncorrect_number_image_view"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints,SmallSp,TextContrastCheck,VisualLintOverlap" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="27dp"
        android:text="@string/read_in"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uncorrect_number_image_view"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints,SmallSp,VisualLintOverlap" />


    <TextView
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/marginTop_iv"
        android:text="@string/privacy_policy"
        android:textColorHighlight="@color/button_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uncorrect_number_image_view"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints,SmallSp,TextSizeCheck" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/baseline_arrow_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/pay"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btnBack"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintTop_toTopOf="@+id/btnBack" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:elevation="3dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@+id/input_data_tv"
        tools:layout_editor_absoluteX="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_info"
                android:layout_width="40dp"
                android:layout_height="29dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/elkart_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textElcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:inputType="number"
                android:text="@string/elkart"
                android:textColor="@color/blue"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icon_info"
                app:layout_constraintTop_toTopOf="@+id/icon_info"
                tools:ignore="TextViewEdits,TouchTargetSizeCheck" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/number_card_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="1dp"
                android:hint="@string/number_card_hint"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/error_color"
                app:hintTextColor="@color/blue"
                app:layout_constraintTop_toBottomOf="@+id/icon_info">

                <com.vicmikhailau.maskededittext.MaskedEditText
                    android:id="@+id/numberCardEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    app:mask="#### #### #### ####"
                    tools:ignore="VisualLintTextFieldSize,TextContrastCheck,SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/validity_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="4dp"
                android:hint="@string/validity"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/error_color"
                app:hintTextColor="@color/blue"
                app:layout_constraintEnd_toStartOf="@+id/cvv_edit_text_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_card_edit_text_layout">

                <com.vicmikhailau.maskededittext.MaskedEditText
                    android:id="@+id/validity_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    app:mask="##/##"
                    tools:ignore="VisualLintTextFieldSize,TextContrastCheck,SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cvv_edit_text_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="6dp"
                android:hint="@string/cvv"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/error_color"
                app:endIconDrawable="@drawable/ic_baseline_info"
                app:hintTextColor="@color/blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/validity_edit_text_layout"
                app:layout_constraintTop_toBottomOf="@+id/number_card_edit_text_layout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cvv_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:drawableEnd="@drawable/ic_baseline_info"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textColorHint="#757575"
                    tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/accept_btn"
        android:layout_width="332dp"
        android:layout_height="54dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_rounded"
        android:text="@string/accept"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VisualLintButtonSize" />


</androidx.constraintlayout.widget.ConstraintLayout>


